bg-img = url('../imgs/bg-pattern-three.jpg')

*
    padding 0
    margin auto

body

    div#root
        position relative

        &:after
            content: "";
            background: bg-img;
            opacity: 0.5;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            position: absolute;
            width 100%
            height 100%
            z-index: -1;

        header
            margin auto 
            padding 15px 

            h1
                text-align: center

        main#content

            section#canvas-container
                background-color #333333

                div#kinetic-canvas
                    background-color #FFFFFF
                    box-sizing border-box
                    border 3px solid yellowgreen
                    border-radius 15px
                    margin auto
        
        footer
            text-align: center
            padding 10px